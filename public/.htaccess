<IfModule mod_rewrite.c>
    # -----------------------------------------
    # 0️⃣ Extra security and directory settings
    # -----------------------------------------
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Preserve Authorization Header (for APIs, Sanctum, Passport, etc.)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Preserve X-XSRF-Token Header (for SPA / CSRF protection)
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # -----------------------------------------
    # 1️⃣ Directly serve files from storage/app/public
    # -----------------------------------------
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteCond %{DOCUMENT_ROOT}/../storage/app/public%{REQUEST_URI:/storage/} -f
    RewriteRule ^storage/(.*)$ ../storage/app/public/$1 [L]

    # -----------------------------------------
    # 2️⃣ Redirect trailing slashes (if not a folder)
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # -----------------------------------------
    # 3️⃣ Laravel default: send everything else to index.php
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# -----------------------------------------
# 4️⃣ Cache static assets (images, CSS, JS) for 1 year
# -----------------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
</IfModule>

# -----------------------------------------
# 5️⃣ Security: deny access to hidden files
# -----------------------------------------
<FilesMatch "^\.">
    Require all denied
</FilesMatch>
